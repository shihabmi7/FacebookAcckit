<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.SignUpActivity">

    <!--   &lt;!&ndash; Login progress &ndash;&gt;
       <ProgressBar
           android:id="@+id/login_progress"
           style="?android:attr/progressBarStyleLarge"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginBottom="8dp"
           android:visibility="gone" />
   -->
    <ScrollView
        android:id="@+id/sign_up"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <!-- <RelativeLayout
                 android:id="@+id/relative_profile_pic"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerHorizontal="true">

                 <de.hdodenhof.circleimageview.CircleImageView
                     android:id="@+id/imageViewProfile_Picture"
                     android:layout_width="80dp"
                     android:layout_height="80dp"
                     android:layout_centerHorizontal="true"
                     android:src="@mipmap/pic_upload" />

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="10dp"
                     android:textColor="@color/app_black"
                     android:layout_below="@+id/imageViewProfile_Picture"
                     android:text="Click and set a picture" />


             </RelativeLayout>-->
            <com.calldoctor.calldoctor.model.SegmentedGroup xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
                android:id="@+id/segmented_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                segmentedgroup:sc_border_width="2dp"
                segmentedgroup:sc_corner_radius="10dp">

                <RadioButton
                    android:id="@+id/button_patient"
                    style="@style/RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I'm a Patient" />

                <RadioButton
                    android:id="@+id/button_doctor"
                    style="@style/RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I'm a Doctor" />
            </com.calldoctor.calldoctor.model.SegmentedGroup>


            <TextView
                android:id="@+id/text_req"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentRight="true"
                android:padding="2dp"
                android:text="*All fields are required"
                android:textColor="@color/app_red" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_launcher" />


            <EditText

                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/segmented_user"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_edit_box"
                android:drawableLeft="@mipmap/user"
                android:drawablePadding="10dp"
                android:hint="Name"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text=""
                android:textColor="@color/app_black"
                android:textColorHint="@color/app_gray" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/et_name"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_edit_box"
                android:drawableLeft="@mipmap/mobile_number"
                android:drawablePadding="10dp"
                android:hint="Phone"
                android:inputType="number"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"

                android:text=""
                android:textColor="@color/app_black"
                android:textColorHint="@color/app_gray" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/et_phone"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_edit_box"
                android:drawableLeft="@mipmap/password"
                android:drawablePadding="10dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text=""
                android:textColor="@color/app_black"
                android:textColorHint="@color/app_gray" />


            <!--
                        <EditText
                            android:id="@+id/et_icard"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_below="@+id/et_phone"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/round_edit_box"
                            android:hint="@string/icard"
                            android:inputType="text"
                            android:maxLines="1"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text=""
                            android:textColor="@color/app_black"
                            android:textColorHint="@color/app_gray" />
            -->

            <Button
                android:id="@+id/btn_continue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_password"
                android:layout_marginTop="16dp"
                android:background="@drawable/red_btn"
                android:text="Continue"
                android:textColor="@android:color/white"
                android:textSize="19dp"
                android:textStyle="normal" />

            <LinearLayout
                android:id="@+id/btt_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_continue"
                android:layout_marginTop="25dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/dd_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Have an account? "
                    android:textColor="@color/app_red" />

                <TextView
                    android:id="@+id/textview_sign_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="SIGN IN"
                    android:textColor="@color/app_black"
                    android:textStyle="bold" />
            </LinearLayout>

        </RelativeLayout>


    </ScrollView>
</RelativeLayout>
